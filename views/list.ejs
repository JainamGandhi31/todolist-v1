<%- include('header.ejs') %>

    <div class="box" id="heading">
        <h1><%= listTitle %> !</h1>
    </div>

    <div class="box">
        <% for(var i=0;i<items.length;i++){ %>
            <div class="item">
                <input type="checkbox" name="" id="">
                <p>
                    <%= items[i] %>
                </p>
            </div>
            <% } %>
            <!-- For each line that is not HTML, we have used scriplet tags <%  %> -->
        
            <form class="item" action="<%= postPath %>" method="post">
                <input type="text" name="newTask" id="" placeholder="Enter New Task" autocomplete="off">
                <button type="submit" name="button">+</button>
            </form>
    </div>

    <%- include('footer.ejs') %>

